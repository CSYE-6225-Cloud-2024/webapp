{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "CommonJS",
    "target": "esnext",
    "moduleResolution": "Node",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "outDir": "dist"
  },
  "include": ["src/**/*", "test"],
  "exclude": ["node_modules"]
}
